<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profil <%= profile.name %> - Story.id</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-50 font-sans text-slate-900">
    <!-- Navbar -->
    <nav class="bg-white border-b border-slate-200 sticky top-0 z-50">
        <div class="max-w-4xl mx-auto px-4 h-16 flex items-center justify-between">
            <a href="/" class="text-2xl font-black text-blue-600 tracking-tighter">STORY.ID</a>
            <% if (user) { %>
                <a href="/upload" class="bg-blue-600 text-white px-4 py-2 rounded-xl font-bold text-xs hover:bg-blue-700 transition">Tulis Cerita</a>
            <% } %>
        </div>
    </nav>

    <div class="max-w-4xl mx-auto py-8 px-4">
        <!-- Profile Card -->
        <div class="bg-white p-8 rounded-[2.5rem] border border-slate-200 text-center mb-10 shadow-sm relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-2 bg-blue-600"></div>
            <img src="<%= profile.profilePic || 'https://ui-avatars.com/api/?size=128&name=' + profile.name %>" 
            class="w-28 h-28 rounded-full mx-auto mb-4 object-cover border-4 border-slate-50 shadow-md bg-slate-100">
            
            <h1 class="text-2xl font-black"><%= profile.name %></h1>
            <p class="text-slate-400 font-bold text-sm mb-6">@<%= profile.username %></p>
            
            <div class="flex justify-center items-center gap-8 mb-8">
                <div class="text-center">
                    <p class="text-xl font-black text-slate-800"><%= stories.length %></p>
                    <p class="text-[10px] text-slate-400 font-black uppercase tracking-widest">Cerita</p>
                </div>
                <div class="w-[1px] h-8 bg-slate-100"></div>
                <div class="text-center">
                    <p class="text-xl font-black text-slate-800"><%= followersCount %></p>
                    <p class="text-[10px] text-slate-400 font-black uppercase tracking-widest">Pengikut</p>
                </div>
            </div>

            <div class="flex justify-center gap-3">
                <% if(user && user.id === profile.id) { %>
                    <a href="/settings" class="bg-slate-900 text-white px-8 py-2.5 rounded-2xl font-black text-sm transition hover:bg-black">Edit Profil</a>
                <% } else if(user) { %>
                    <button onclick="followUser('<%= profile.id %>')" id="fbtn" 
                    class="px-8 py-2.5 rounded-2xl font-black text-sm transition <%= isFollowing ? 'bg-slate-100 text-slate-600' : 'bg-blue-600 text-white' %>">
                        <%= isFollowing ? 'Mengikuti' : 'Ikuti Penulis' %>
                    </button>
                <% } %>
            </div>
        </div>

        <!-- User's Stories -->
        <h2 class="text-lg font-black mb-6 px-2 flex items-center gap-2">
            <span class="w-1.5 h-6 bg-blue-600 rounded-full"></span>
            Karya <%= profile.name %>
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% if(stories && stories.length > 0) { %>
                <% stories.forEach(s => { %>
                    <div class="relative group">
                        <a href="/story/<%= s.id %>" class="bg-white p-4 rounded-3xl flex gap-4 border border-slate-200 shadow-sm hover:border-blue-200 transition">
                            <img src="<%= s.coverImg %>" class="w-20 h-28 rounded-2xl object-cover bg-slate-100 flex-shrink-0">
                            <div class="flex flex-col justify-center py-1">
                                <h3 class="font-bold text-slate-800 line-clamp-2 leading-snug mb-2"><%= s.title %></h3>
                                <div class="flex items-center gap-2">
                                    <span class="text-[9px] bg-blue-50 text-blue-600 font-black px-2 py-1 rounded-lg uppercase"><%= s.genre %></span>
                                </div>
                            </div>
                        </a>
                        
                        <!-- TOMBOL HAPUS (Hanya Muncul Jika Ini Profil Kamu) -->
                        <% if (user && user.id === profile.id) { %>
                            <form action="/story/delete/<%= s.id %>" method="POST" onsubmit="return confirm('Hapus cerita ini secara permanen?')" class="absolute top-2 right-2">
                                <button type="submit" class="w-8 h-8 bg-red-50 text-red-500 rounded-full flex items-center justify-center hover:bg-red-500 hover:text-white transition shadow-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </form>
                        <% } %>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full py-16 text-center bg-white rounded-3xl border border-dashed border-slate-200">
                    <p class="text-slate-400 text-sm italic">Belum ada karya.</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        async function followUser(id) {
            const res = await fetch(`/follow/${id}`, { method: 'POST' });
            const data = await res.json();
            if(data.ok) location.reload();
        }
    </script>
</body>
</html>
